#!/bin/bash

VERSION=0.0.1-SNAPSHOT
RUN_SCRIPT="$(basename "${0}")"

usage() {
    echo "Usage: $RUN_SCRIPT [OPTIONS] INPUT-FILES"
    echo
    echo "Options:"
    echo "  -c, --configuration [CONFIG_FILE]"
    echo "  -f, --input-format [INPUT-FORMAT (Default t)]"
    echo "  -h, --help"
    echo
    exit 1
}

main() {
    [ $# -lt 1 ] && ( usage; exit 1 );

    INPUT_FORMAT="t"
    for OPT in "$@"
    do
        case "$OPT" in
            '-h'|'--help' )
                usage
                exit 0
                ;;
            '-c'|'--config' )
                if [[ -z "$2" ]] || [[ "$2" =~ ^-+ ]]; then
                    echo "$RUN_SCRIPT: option requires an argument -- $1" 1>&2
                fi
                CONFIG_FILE=$"$2"
                shift 2
                ;;
            '-f'|'--input-format' )
                if [[ -z "$2" ]] || [[ "$2" =~ ^-+ ]]; then
                    echo "$RUN_SCRIPT: option requires an argument -- $1" 1>&2
                fi
                INPUT_FORMAT="$2"
                shift 2
                ;;
            '--version' )
                echo "Version: $VERSION"
                exit 0
                ;;
            -*)
                echo "$RUN_SCRIPT: illegal option -- '$(echo $1 | sed 's/^-*//')'" 1>&2
                exit 1
                ;;
        esac
    done
    INPUT_FILES="$@"
    java -jar lib/document-validator-${VERSION}.jar --conf ${CONFIG_FILE} --format ${INPUT_FORMAT} --input ${INPUT_FILES}
}

[ ${#BASH_SOURCE[@]} = 1 ] && main "$@"
